<div class="min-vw-90 justify-content-center d-block">
  <div class="row">
    <h2><%= @bike.brand %> <%= @bike.model %></h2>
  </div>
  <div class="row bg-white m-5 align-items-center">

    <div class="col-sm bg-white m-5 ">
      <%= cl_image_tag @bike.photo.key, class: "card-img-top"  %>
      <div class="row mt-3">
        <div class="col">
          <h5 class="float-right">Rating ⭐️⭐️⭐️⭐️</h5>
        </div>
        <div class="col">
          <h5 class="float-center">Speed: <%= @bike.speed%>Km/h</h5>
        </div>
        <div class="col">
        <h5 class="float-left">Price: <%= @bike.price%> <i class="fas fa-beer"></i><i class="fas fa-beer"></i></h5>
        </div>
      </div>
    </div>

    <div class="col-sm bg-white m-5">
      <h3>Pickup Location</h3>
      <%= render 'shared/map' %>
    </div>
  </div>
  <div class="row bg-white m-5 align-items-center">
  <% if !@bike.rented %>
      <div class="">
        <%= simple_form_for [@bike, @booking], html: { class: 'mx-auto d-block p-5' } do |f| %>
        <div class="col-sm bg-white m-5">
          <%= f.input :start_date, as: :date, html5: true, default: Date.today %>
        </div>
        <div class="col-sm bg-white m-5">
          <%= f.input :end_date, as: :date, html5: true %>
        </div>
        <div class="text-center">
          <%= f.submit "Book Now", class: "btn btn-primary btn-lg" %>
        </div>
        <% end %>
      <% else %>
        <h3>Available in <%= @booking.end_date %></h3>
      <% end %>
    </div>
  </div>
</div>


