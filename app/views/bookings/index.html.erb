<h1 class="text-center">My Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Model</th>
      <th>Start date</th>
      <th>End date</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.bike.brand %></td>
        <td><%= booking.bike.model %></td>
        <td><%= booking.start_date %></td>
        <td><%= booking.end_date %></td>
        <td><%= booking.user.email %></td>

        <td>
          <% if policy(booking).update? %>
            <%= link_to 'Edit', edit_bike_booking_path(booking.bike, booking) %>
          <% end %>
        </td>
        <td>
          <% if policy(booking).destroy? %>
            <%= link_to 'Destroy', bike_booking_path(booking.bike, booking), method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
        </tr>
    <% end %>
  </tbody>
</table>
